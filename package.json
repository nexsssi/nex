{
  "name": "quicknotes",
  "version": "1.0.0",
  "description": "A simple note-taking app built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"electron .\"",
    "watch:css": "tailwindcss -i ./renderer/tailwind.css -o ./renderer/styles.css --watch",
    "build:css": "tailwindcss -i ./renderer/tailwind.css -o ./renderer/styles.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "notes",
    "quicknotes"
  ],
  "author": "Abdessamad el bouazzaoui",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^25.9.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}